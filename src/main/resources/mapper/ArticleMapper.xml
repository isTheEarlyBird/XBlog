<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.my.xblog.mapper.ArticleMapper">

    <resultMap id="articleMap" type="com.my.xblog.entity.Article">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="summary" column="summary"/>
        <result property="createTime" column="create_time"/>
        <result property="cover" column="cover"/>
        <result property="content" column="content"/>
        <result property="type" column="type"/>
        <result property="views" column="views"/>
        <result property="likes" column="likes"/>
        <result property="comments" column="comments"/>
        <result property="commentable" column="commentable"/>
        <result property="recommended" column="recommended"/>
        <result property="published" column="published"/>
        <association property="sysUser" javaType="com.my.xblog.entity.SysUser">
            <id property="id" column="uid"/>
            <result property="username" column="username"/>
            <result property="avatar" column="avatar"/>
        </association>
        <collection property="categorys" column="id"
                    select="com.my.xblog.mapper.CategoryMapper.findCategoryByArticleId">
        </collection>

    </resultMap>

    <sql id="article">
        a.id, a.title, a.summary, a.create_time, a.cover, a.content, a.type, a.views, a.likes, a.comments, a.commentable, a.recommended, a.published
    </sql>

    <sql id="all">
        <include refid="article"></include>
        , u.id uid, u.username, u.avatar
    </sql>
    <insert id="insertArticleCategory">
        insert into article_category (cid, aid) values(#{cid}, #{aid});
    </insert>

    <select id="listArticleByPageByTime" resultMap="articleMap"
            parameterType="com.baomidou.mybatisplus.core.metadata.IPage">
        SELECT
        <include refid="all"/>
        FROM article a
        LEFT JOIN sys_user u
        ON a.user_id = u.id
        WHERE a.published = 1
        ORDER BY a.create_time DESC
    </select>
    <select id="findArticleByID" resultType="com.my.xblog.entity.Article" resultMap="articleMap">

    </select>
    <select id="listArticleByUserId" resultType="com.my.xblog.entity.Article" resultMap="articleMap">
        SELECT
        <include refid="article"/>
        FROM article a
        WHERE user_id = #{uid}
    </select>
    <select id="listArticleByCategoryIdPage" resultType="com.my.xblog.entity.Article" resultMap="articleMap">
        SELECT
        <include refid="all"/>
        FROM article a, article_category ac, sys_user u
        WHERE #{cid} = ac.cid
        AND a.id = ac.aid
        AND a.user_id = u.id
        AND a.published = 1
        ORDER BY create_time DESC
    </select>


</mapper>
